@model AppMVC.Net.Models.PlanetModel

<h1>@Model.Name</h1>

<div class="card w-50">
    <img class="card-img-top"  src="~/planet/@(Model.Name).jpeg" alt=""/>
    <div class="card-body">
        <h4>@Model.VnName</h4>
        <div class="card-text">
            @Model.Content
        </div>

        <a class="card-link" asp-action="Index">Các hành tinh</a>
    </div>
</div>
